<div class="user-info">
    <div class="form-line">
        <span class="label">用户名：</span>
        <span class="text">{{username}}</span>
    </div>
    <div class="form-line">
        <span class="label">电 话：</span>
        <input class="input" id="phone" autocomplete="off" value="{{phone}}" />
    </div>
    <div class="form-line">
        <span class="label">邮 箱：</span>
        <input class="input" id="email" autocomplete="off" value="{{email}}" />
    </div>

    <div class="form-line">
        <span class="label">收件人：</span>
        <input class="input" id="receiverName" autocomplete="off" value="{{shipping.receiverName}}" />
    </div>
    <div class="form-line">
        <span class="label">手 机：</span>
        <input class="input" id="receiverPhone" autocomplete="off" value="{{shipping.receiverPhone}}" />
    </div>
    <div class="form-line">
        <span class="label">省 份：</span>
        <input class="input" id="receiverProvince" autocomplete="off" value="{{shipping.receiverProvince}}" />
    </div>
    <div class="form-line">
        <span class="label">城 市：</span>
        <input class="input" id="receiverCity" autocomplete="off" value="{{shipping.receiverCity}}" />
    </div>
    <div class="form-line">
        <span class="label">详细地址：</span>
        <input class="input" id="receiverAddress" autocomplete="off" value="{{shipping.receiverAddress}}" />
    </div>
    <div class="form-line">
        <span class="label">邮政编码：</span>
        <input class="input" id="receiverZip" autocomplete="off" value="{{shipping.receiverZip}}" />
    </div>



    <!--<div class="form-line">
        <span class="label">问 题：</span>
        <input class="input" id="question" autocomplete="off" value="{{question}}" />
    </div>
    <div class="form-line">
        <span class="label">答 案：</span>
        <input class="input" id="answer" autocomplete="off" value="{{answer}}" />
    </div>-->
    <span class="btn btn-submit">提交</span>
</div>